/// Lịch làm việc cố định hàng tuần của bác sĩ
model DoctorAvailability {
  id        Int    @id @default(autoincrement())
  dayOfWeek Int // 0 = Sunday, 1 = Monday, 2 = Tuesday, ..., 6 = Saturday
  startTime String
  endTime   String

  doctorId Int
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])

  @@unique([doctorId, dayOfWeek])
}

/// Ghi đè lịch làm việc cho một ngày cụ thể (nghỉ, làm thêm)
model AvailabilityOverride {
  id        Int      @id @default(autoincrement())
  date      DateTime @db.Date
  startTime String?
  endTime   String?

  doctorId Int
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])

  @@unique([doctorId, date])
}

// ----------------- APPOINTMENT & RELATED MODELS -----------------

/// Lịch hẹn khám bệnh: Linh hoạt cho cả khách có hồ sơ và khách vãng lai.
model Appointment {
  id        Int        @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  status    AppointmentStatus
  notes     String?
  joinUrl   String?
  hostUrl   String?
  type      AppointmentType @default(OFFLINE)

  patientProfileId Int
  patientProfile   PatientProfile @relation(fields: [patientProfileId], references: [id])

  // Quan hệ
  doctorId  Int
  doctor    DoctorProfile @relation("DoctorAppointments", fields: [doctorId], references: [id])
  serviceId Int
  service   Service       @relation(fields: [serviceId], references: [id])
  clinicId  Int?
  clinic    Clinic?       @relation("ClinicAppointments", fields: [clinicId], references: [id])
  billing   Billing?
  feedback  Feedback?
  result    AppointmentResult?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for performance optimization
  @@index([startTime, status, clinicId])
  @@index([status, clinicId, startTime])
}

/// Đơn thuốc: Gắn với một hồ sơ bệnh nhân cụ thể.
model Prescription {
  id    Int     @id @default(autoincrement())
  notes String?

  doctorId Int
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])

  patientProfileId Int
  patientProfile   PatientProfile @relation(fields: [patientProfileId], references: [id])

  items     PrescriptionItem[]
  createdAt DateTime           @default(now())
}

/// Feedback: Gắn với một appointment cụ thể.
model Feedback {
  id      Int     @id @default(autoincrement())
  rating  Int
  comment String?

  appointmentId Int         @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id])

  createdAt DateTime @default(now())
}

/// Kết quả khám từ bác sĩ: Gắn với một appointment cụ thể.
model AppointmentResult {
  id          Int     @id @default(autoincrement())
  diagnosis   String? // Chẩn đoán
  notes       String? // Ghi chú của bác sĩ
  prescription String? // Đơn thuốc (có thể là text hoặc JSON)
  recommendations String? // Khuyến nghị, lời dặn

  appointmentId Int         @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id])

  doctorId Int
  doctor   DoctorProfile @relation("DoctorResults", fields: [doctorId], references: [id])

  // Quan hệ với files đính kèm
  files AppointmentResultFile[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// File đính kèm kết quả khám (ảnh, PDF)
model AppointmentResultFile {
  id        Int    @id @default(autoincrement())
  fileUrl   String // URL file từ S3
  fileType  String // MIME type: image/jpeg, image/png, application/pdf
  fileName  String // Tên file gốc
  fileSize  Int    // Kích thước file (bytes)

  resultId Int
  result   AppointmentResult @relation(fields: [resultId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([resultId])
}

// ----------------- OTHER MODELS (Giữ nguyên hoặc ít thay đổi) -----------------

/// Chuyên khoa: Phân loại các dịch vụ y tế theo chuyên khoa
model Specialty {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  icon        String? // Icon hoặc image URL (optional)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Quan hệ
  services        Service[]         @relation("ServiceSpecialty")
  doctorSpecialties DoctorSpecialty[]
}

model Service {
  id            Int             @id @default(autoincrement())
  name          String
  price         Float
  duration      Int // thời lượng (phút)
  description   String?
  specialtyId   Int
  specialty     Specialty       @relation("ServiceSpecialty", fields: [specialtyId], references: [id])
  createdAt     DateTime        @default(now())
  updatedAt     DateTime?
  appointments  Appointment[]
  doctorService DoctorService[] @relation("Doctor")
}

model DoctorService {
  id        Int           @id @default(autoincrement())
  doctorId  Int
  doctor    DoctorProfile @relation("Services", fields: [doctorId], references: [id])
  serviceId Int
  service   Service       @relation("Doctor", fields: [serviceId], references: [id])
  createdAt DateTime      @default(now())

  @@unique([doctorId, serviceId])
}

/// Quan hệ many-to-many giữa Doctor và Specialty
model DoctorSpecialty {
  id          Int       @id @default(autoincrement())
  doctorId    Int
  doctor      DoctorProfile @relation(fields: [doctorId], references: [id])
  specialtyId Int
  specialty   Specialty @relation(fields: [specialtyId], references: [id])
  createdAt   DateTime  @default(now())

  @@unique([doctorId, specialtyId])
  @@index([doctorId])
  @@index([specialtyId])
}

model Billing {
  id              Int            @id @default(autoincrement())
  amount          Float
  status          PaymentStatus // Overall status of the billing
  paymentMethod   PaymentMethod?
  notes           String?
  appointmentId   Int            @unique
  appointment     Appointment    @relation(fields: [appointmentId], references: [id])
  userPromotionId Int? // Voucher được áp dụng (chỉ update sau khi thanh toán thành công)
  userPromotion   UserPromotion? @relation(fields: [userPromotionId], references: [id])

  // One-to-many relationship: One billing can have multiple transactions
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for performance optimization
  @@index([status, appointmentId])
}

model Medicine {
  id                Int                @id @default(autoincrement())
  name              String
  dosage            String?
  stock             Int
  price             Float
  prescriptionItems PrescriptionItem[]
}

model PrescriptionItem {
  id             Int          @id @default(autoincrement())
  quantity       Int
  instructions   String?
  prescriptionId Int
  prescription   Prescription @relation(fields: [prescriptionId], references: [id])
  medicineId     Int
  medicine       Medicine     @relation(fields: [medicineId], references: [id])
}

model Clinic {
  id            Int                   @id @default(autoincrement())
  name          String
  address       String
  phone         String?
  email         String?
  description   String?
  isActive      Boolean               @default(true)
  doctors       DoctorProfile[]       @relation("ClinicDoctors")
  appointments  Appointment[]         @relation("ClinicAppointments")
  receptionists ReceptionistProfile[] @relation("ClinicReceptionists")
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
}

/// Giao dịch thanh toán (SEPAY, tiền mặt, ...)
model Transaction {
  id     Int   @id @default(autoincrement())
  amount Float

  // Use the new TransactionStatus enum for individual transaction status
  status TransactionStatus @default(PENDING)

  // Keep userId to represent who performed the transaction
  // (e.g., patient user, or receptionist for offline payments)
  userId Int
  user   User @relation(fields: [userId], references: [id])

  // --- CRITICAL FIELDS ---

  // 1. (CRITICAL) Many-to-one relationship with Billing
  billingId Int
  billing   Billing @relation(fields: [billingId], references: [id])

  // 2. Voucher được áp dụng cho transaction này (chỉ lưu tạm, chưa mark as used)
  userPromotionId Int?
  userPromotion   UserPromotion? @relation(fields: [userPromotionId], references: [id])

  // 2. Provider information
  // (e.g., "SEPAY_QR", "CASH", "VNPAY")
  provider String

  // 3. (CRITICAL) Provider transaction ID
  // Used for searching when webhook is called
  providerTransactionId String? @unique

  // 4. (RECOMMENDED) Message from provider
  providerMessage String?

  // 5. (MANDATORY) Raw webhook data
  // Extremely important for debugging when errors occur
  rawWebhookPayload Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([billingId]) // Optimize search for transactions of one billing
}

/// Bài viết do admin tạo (tin tức, bài sức khỏe, ...)
model Article {
  id              Int            @id @default(autoincrement())
  title           String
  content         String         // Giữ lại cho backward compatibility
  contentMarkdown String?        // Nội dung Markdown
  excerpt         String?        // Mô tả ngắn
  slug            String         @unique // URL thân thiện
  isPublished     Boolean        @default(false)
  publishedAt     DateTime?
  authorId        Int?           // ID của admin tạo bài viết
  views           Int            @default(0)
  image           String?        // Ảnh đại diện/thumbnail

  // Quan hệ
  images ArticleImage[]
  tags   ArticleTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([authorId])
}

/// Khuyến mãi / voucher
model Promotion {
  id                Int      @id @default(autoincrement())
  title             String
  code              String   @unique
  description       String?
  discountPercent   Float // % giảm giá
  maxDiscountAmount Float // Giảm giá tối đa (VND)
  validFrom         DateTime
  validTo           DateTime
  createdBy         Int?
  updatedBy         Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Quan hệ
  displays       PromotionDisplay[]
  userPromotions UserPromotion[]
}

// ----------------- Q&A MODELS -----------------

enum VoteType {
  UP
  DOWN
}

/// Câu hỏi trong cộng đồng
model Question {
  id        Int    @id @default(autoincrement())
  title     String
  content   String
  views     Int    @default(0)
  upvotes   Int    @default(0)
  downvotes Int    @default(0)

  authorId Int
  author   User @relation("QuestionAuthor", fields: [authorId], references: [id])

  bestAnswerId Int?
  bestAnswer   Answer? @relation("BestAnswer", fields: [bestAnswerId], references: [id])

  tags        QuestionTag[]
  answers     Answer[]              @relation("QuestionAnswers")
  votes       QuestionVote[]
  editHistory QuestionEditHistory[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([authorId])
  @@index([createdAt])
  @@index([upvotes, downvotes])
}

/// Câu trả lời cho câu hỏi
model Answer {
  id           Int     @id @default(autoincrement())
  content      String
  upvotes      Int     @default(0)
  downvotes    Int     @default(0)
  isBestAnswer Boolean @default(false)

  questionId Int
  question   Question @relation("QuestionAnswers", fields: [questionId], references: [id], onDelete: Cascade)

  bestAnswerFor Question[] @relation("BestAnswer")

  authorId Int
  author   User @relation("AnswerAuthor", fields: [authorId], references: [id])

  votes       AnswerVote[]
  editHistory AnswerEditHistory[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([questionId])
  @@index([authorId])
  @@index([createdAt])
}

/// Tag cho câu hỏi và bài viết
model Tag {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  slug        String  @unique
  description String?
  usageCount  Int     @default(0)

  questions QuestionTag[]
  articles  ArticleTag[] @relation("ArticleTags")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([usageCount])
}

/// Quan hệ many-to-many giữa Question và Tag
model QuestionTag {
  id         Int      @id @default(autoincrement())
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  tagId      Int
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([questionId, tagId])
  @@index([questionId])
  @@index([tagId])
}

/// Vote cho câu hỏi
model QuestionVote {
  id         Int      @id @default(autoincrement())
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  userId     Int
  user       User     @relation("QuestionVotes", fields: [userId], references: [id])
  voteType   VoteType

  createdAt DateTime @default(now())

  @@unique([questionId, userId])
  @@index([questionId])
  @@index([userId])
}

/// Vote cho câu trả lời
model AnswerVote {
  id       Int      @id @default(autoincrement())
  answerId Int
  answer   Answer   @relation(fields: [answerId], references: [id], onDelete: Cascade)
  userId   Int
  user     User     @relation("AnswerVotes", fields: [userId], references: [id])
  voteType VoteType

  createdAt DateTime @default(now())

  @@unique([answerId, userId])
  @@index([answerId])
  @@index([userId])
}

/// Lịch sử chỉnh sửa câu hỏi
model QuestionEditHistory {
  id         Int      @id @default(autoincrement())
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  editedBy   Int
  editor     User     @relation("QuestionEditor", fields: [editedBy], references: [id])
  oldTitle   String?
  newTitle   String?
  oldContent String?
  newContent String?
  reason     String?

  createdAt DateTime @default(now())

  @@index([questionId])
  @@index([editedBy])
}

/// Lịch sử chỉnh sửa câu trả lời
model AnswerEditHistory {
  id         Int     @id @default(autoincrement())
  answerId   Int
  answer     Answer  @relation(fields: [answerId], references: [id], onDelete: Cascade)
  editedBy   Int
  editor     User    @relation("AnswerEditor", fields: [editedBy], references: [id])
  oldContent String?
  newContent String?
  reason     String?

  createdAt DateTime @default(now())

  @@index([answerId])
  @@index([editedBy])
}

// ----------------- APP TERMS & REGULATIONS MODELS -----------------

enum AppTermsType {
  USAGE_REGULATIONS // Quy định sử dụng
  DISPUTE_RESOLUTION // Chính sách giải quyết khiếu nại, tranh chấp
  PRIVACY_POLICY // Chính sách bảo vệ dữ liệu cá nhân
  APP_FAQ // Hỏi đáp về ứng dụng
}

/// Điều khoản và quy định của ứng dụng
model AppTerms {
  id        Int          @id @default(autoincrement())
  type      AppTermsType // Loại điều khoản
  title     String // Tiêu đề
  content   String // Nội dung (HTML hoặc markdown)
  version   Int          @default(1) // Phiên bản
  isActive  Boolean      @default(true) // Bản đang được áp dụng
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  createdBy Int? // ID của admin tạo
  updatedBy Int? // ID của admin cập nhật

  @@index([type])
  @@index([isActive])
}

// ----------------- PROMOTION MODELS -----------------

/// Cấu hình UI hiển thị promotion trên app
model PromotionDisplay {
  id              Int       @id @default(autoincrement())
  promotionId     Int
  promotion       Promotion @relation(fields: [promotionId], references: [id])
  displayOrder    Int       @default(0)
  isActive        Boolean   @default(false)
  backgroundColor String // JSON: ["#1E3A5F", "#2C5282"]
  textColor       String // Màu chữ
  buttonColor     String // Màu nút
  buttonTextColor String // Màu chữ nút
  buttonText      String    @default("Nhận ngay") // Text hiển thị trên button
  iconName        String    @default("gift-outline") // Tên icon Ionicons
  imageUrl        String?
  createdBy       Int?
  updatedBy       Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  archivedAt      DateTime? // Lưu lại lịch sử theme cũ

  @@index([isActive])
  @@index([promotionId])
}

/// Tracking khi user claim voucher
model UserPromotion {
  id           Int           @id @default(autoincrement())
  userId       Int
  user         User          @relation(fields: [userId], references: [id])
  promotionId  Int
  promotion    Promotion     @relation(fields: [promotionId], references: [id])
  claimedAt    DateTime      @default(now())
  usedAt       DateTime? // Chỉ update khi thanh toán thành công
  billings     Billing[] // Quan hệ với billing (chỉ update sau khi thanh toán thành công)
  transactions Transaction[] // Quan hệ với transactions (lưu tạm khi apply voucher)

  @@unique([userId, promotionId])
  @@index([userId])
  @@index([promotionId])
}

// ----------------- ARTICLE MODELS -----------------

/// Ảnh trong bài viết
model ArticleImage {
  id        Int      @id @default(autoincrement())
  articleId Int
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  url       String   // URL ảnh từ S3
  alt       String?  // Alt text cho SEO
  order     Int      @default(0) // Thứ tự hiển thị
  createdAt DateTime @default(now())

  @@index([articleId])
}

/// Quan hệ many-to-many giữa Article và Tag
model ArticleTag {
  id        Int      @id @default(autoincrement())
  articleId Int
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tagId     Int
  tag       Tag      @relation("ArticleTags", fields: [tagId], references: [id])
  createdAt DateTime @default(now())

  @@unique([articleId, tagId])
  @@index([articleId])
  @@index([tagId])
}
