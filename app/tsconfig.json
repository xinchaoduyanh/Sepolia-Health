{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"],
      "@/lib/api/*": ["lib/api/*"],
      "@/lib/hooks/*": ["lib/hooks/*"],
      "@/lib/utils/*": ["lib/utils/*"],
      "@/contexts/*": ["contexts/*"],
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"],
      "@/providers/*": ["providers/*"],
      "@/assets/*": ["assets/*"],
      "@/constants/*": ["constants/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
